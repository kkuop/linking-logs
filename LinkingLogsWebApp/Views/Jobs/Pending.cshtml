@model LinkingLogsWebApp.Views.ViewModels.OpenJobsViewModel

@{
    ViewData["Title"] = "Pending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6">
            <h1>Pending Bids</h1>

            <p>
                <a asp-action="Create">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Jobs.FirstOrDefault().WoodType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Jobs.FirstOrDefault().Site)
                        </th>
                        <th>Bids</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null)
                    {

                    }
                    else
                    {
                        @foreach (var item in Model.Jobs)
                        {
                            <tr>
                                <td>
                                    @Html.Raw(item.WoodType.Type)
                                </td>
                                <td>
                                    @Html.Raw(item.Site.Name)
                                </td>
                                <td>
                                    @Html.Raw(Model.JobBids.Where(a => a.JobId == item.JobId).ToList().Count)
                                </td>
                                <td>
                                    <a asp-controller="Jobs" asp-action="ViewBids" asp-route-id="@item.JobId">View Bids</a>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>
