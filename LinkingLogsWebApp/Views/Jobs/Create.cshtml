@model LinkingLogsWebApp.Models.Job

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="row ll-form-shadow">
                <div class="col">
                    <div class="row">
                        <div class="col text-center">
                            <h2 class="ll-form-header">Create Job(s)</h2>
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Site</span>
                                        </div>
                                        <select asp-for="SiteId" class="form-control" asp-items='new SelectList(Model.Sites, "SiteId", "Name")'></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Wood Type</span>
                                        </div>
                                        <select asp-for="WoodTypeId" class="form-control" asp-items='new SelectList(Model.WoodTypes, "WoodTypeId", "Type")'></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Loads</span>
                                        </div>
                                        <input asp-for="Loads" class="form-control" min="1" max="100"/>
                                    </div>
                                    <span asp-validation-for="Loads" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Load Size</span>
                                        </div>
                                        <input asp-for="LoadSize" class="form-control" />
                                    </div>
                                    <span asp-validation-for="LoadSize" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="SiteId" class="form-control" />
                                    <span asp-validation-for="SiteId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-controller="SiteManagers" asp-action="Index">Back to Home</a>
</div>

