@model LinkingLogsWebApp.Views.ViewModels.OpenJobsViewModel

@{
    ViewData["Title"] = "Completed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Completed</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.FirstOrDefault().WoodType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.FirstOrDefault().Site)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {

        }
        else
        {
            @foreach (var item in Model.Jobs)
            {
                <tr>
                    <td>
                        @Html.Raw(item.WoodType.Type)
                    </td>
                    <td>
                        @Html.Raw(item.Site.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.JobId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.JobId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.JobId })
                    </td>
                </tr>
            }
        }

    </tbody>
</table>

