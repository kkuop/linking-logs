@model LinkingLogsWebApp.Views.ViewModels.ApproveBidModel

@{
    ViewData["Title"] = "ApproveBid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-sm-6">
                <div class="row ll-form-shadow">
                    <div class="col">
                        <div class="row">
                            <div class="col text-center">
                                <h2 class="ll-form-header">Approve Bid</h2>
                                <hr />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <h4>Are you sure you want to approve this?</h4>
                                <div>
                                    <hr />
                                    <dl class="row">
                                        <dt class="col-sm-3">
                                            Bidder
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.Trucker.FirstName) @Html.DisplayFor(model => model.Trucker.LastName)
                                        </dd>
                                        <dt class="col-sm-3">
                                            @Html.DisplayNameFor(model => model.JobBid.AmountBid)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.JobBid.AmountBid)
                                        </dd>
                                    </dl>
                                    <form asp-action="ApproveBid">
                                        <input type="submit" value="Approve" class="btn btn-success" /> |
                                        <a asp-controller="SiteManagers" asp-action="Index">Back to Home</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

