@model LinkingLogsWebApp.Views.ViewModels.JobBidViewModel

@{
    ViewData["Title"] = "Bid";
    Layout = "~/Views/Shared/_TruckerLayout.cshtml";
}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-sm-4">
            <div class="row ll-form-shadow">
                <div class="col">
                    <div class="row">
                        <div class="col text-center">
                            <h2 class="ll-form-header">Bid</h2>
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <form asp-action="Bid">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="@Model.JobBid.JobBidId" class="form-control" />
                                    <span asp-validation-for="@Model.JobBid.JobBidId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.JobBid.AmountBid" class="control-label"></label>
                                    <input asp-for="@Model.JobBid.AmountBid" class="form-control" />
                                    <span asp-validation-for="@Model.JobBid.AmountBid" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="hidden" value="@Model.Job.JobId" asp-for="@Model.JobBid.JobId" class="form-control" />
                                    <span asp-validation-for="@Model.JobBid.JobId" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Bid" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-controller="Truckers" asp-action="Index">Back to Home</a>
</div>

