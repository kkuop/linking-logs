@model IEnumerable<LinkingLogsWebApp.Models.Job>

@{
    ViewData["Title"] = "OpenJobs";
    Layout = "~/Views/Shared/_TruckerLayout.cshtml";
}

<h1>OpenJobs</h1>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Distance)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Site.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WoodType.Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mill.Name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Distance)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Site.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WoodType.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mill.Name)
                            </td>
                            <td>
                                <a asp-controller="JobBids" asp-action="Bid" asp-route-id="@item.JobId"><input type="button" value="Bid" class="btn btn-primary" /></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

