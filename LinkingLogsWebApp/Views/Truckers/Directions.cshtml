@model LinkingLogsWebApp.Views.ViewModels.DirectionsViewModel
@{
    ViewData["Title"] = "Directions";
    Layout = "~/Views/Shared/_TruckerLayout.cshtml";
}

<h1>Directions</h1>
<div id="floating-panel">
    <b>Start: </b>
