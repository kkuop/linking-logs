@model IEnumerable<LinkingLogsWebApp.Models.Site>

@{
    ViewData["Title"] = "UpcomingSites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <h1>Upcoming Sites</h1>

            <p>
                <a asp-action="Create">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OpeningDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClosingDate)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null)
                    {

                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.Raw(item.OpeningDate.ToShortDateString())
                                </td>
                                <td>
                                    @Html.Raw(item.ClosingDate.ToShortDateString())
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.SiteId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.SiteId })
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>
