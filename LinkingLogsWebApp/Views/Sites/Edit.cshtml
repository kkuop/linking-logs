@model LinkingLogsWebApp.Models.Site

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="row ll-form-shadow">
                <div class="col">
                    <div class="row">
                        <div class="col text-center">
                            <h2 class="ll-form-header">Edit</h2>
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="SiteId" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Name</span>
                                        </div>
                                        <input asp-for="Name" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Latitude</span>
                                        </div>
                                        <input asp-for="Latitude" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Latitude" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Longitude</span>
                                        </div>
                                        <input asp-for="Longitude" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Longitude" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Opening Date</span>
                                        </div>
                                        <input asp-for="OpeningDate" class="form-control" />
                                    </div>
                                    <span asp-validation-for="OpeningDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Closing Date</span>
                                        </div>
                                        <input asp-for="ClosingDate" class="form-control" />
                                    </div>
                                    <span asp-validation-for="ClosingDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="SiteManagerId" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>            
        </div>
    </div>
    <div>
        <a asp-controller="SiteManagers" asp-action="Index">Back to Home</a>
    </div>
</div>


